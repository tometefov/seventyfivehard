version: '3.8'

services:

  db:
    image: postgres:15
    container_name: seventyfive-db
    environment:
      POSTGRES_DB: seventyfive
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"

  backend:
    build: ./backend
    container_name: seventyfive-backend
    depends_on:
      - db
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://db:5432/seventyfive
      SPRING_DATASOURCE_USERNAME: postgres
      SPRING_DATASOURCE_PASSWORD: postgres
      SPRING_JPA_HIBERNATE_DDL_AUTO: update
    ports:
      - "8080:8080"

  frontend:
    build: ./frontend
    container_name: seventyfive-frontend
    depends_on:
      - backend
    ports:
      - "3000:80"

volumes:
  postgres_data:
